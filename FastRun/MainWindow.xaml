<Window x:Class="FastRun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastRun"
        mc:Ignorable="d"
        Title="FastRun" Height="350" Width="525" Closing="Window_Closing" StateChanged="Window_StateChanged">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#7F23728F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <TextBox x:Name="txtCommand" HorizontalAlignment="Left" Height="23" Margin="55,26,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="301" KeyDown="txtCommand_KeyDown" KeyUp="txtCommand_KeyUp"/>
        <Label x:Name="lbContent" Content="" HorizontalAlignment="Left" Margin="55,70,0,0" VerticalAlignment="Top" Height="101" Width="301"/>

    </Grid>
</Window>
